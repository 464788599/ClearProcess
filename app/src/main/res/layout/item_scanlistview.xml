<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"
        android:id="@+id/iv_item_app_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/ic_launcher"/>

    <TextView
        android:layout_toRightOf="@+id/iv_item_app_icon"
        android:id="@+id/tv_item_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:text="正在运行的进程" />
    <TextView
       android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/cb_item_app_select"
        android:layout_centerVertical="true"
        android:id="@+id/tv_memory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20.00MB"
        android:textSize="18sp"/>

    <CheckBox
        android:checked="false"
        android:id="@+id/cb_item_app_select"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp" />

</RelativeLayout>