<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:background="@android:color/white"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/wifi_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_250_dip">

        <ImageView
            android:id="@+id/iv_private_dialog_wifi_icon"
            android:layout_width="@dimen/dimen_100_dip"
            android:layout_height="@dimen/dimen_100_dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_80_dip"
            android:src="@drawable/wifi_default" />

        <TextView
            android:id="@+id/tv_private_dialog_wifi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_30_dip"
            android:layout_toEndOf="@+id/iv_private_dialog_wifi_icon"
            android:layout_toRightOf="@+id/iv_private_dialog_wifi_icon"
            android:text="wifi name"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dimen_60_dip" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/layout_btns2"
        android:layout_below="@+id/wifi_title"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/dimen_300_dip">
        <RelativeLayout
            android:id="@+id/layout_check_speed"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_check_speed"
                android:layout_centerHorizontal="true"
                android:layout_width="@dimen/dimen_80_dip"
                android:layout_height="@dimen/dimen_80_dip"
                android:background="@drawable/check_speed"/>
            <TextView
                android:layout_marginTop="@dimen/dimen_20_dip"
                android:layout_below="@+id/iv_check_speed"
                android:layout_width="wrap_content"
                android:text="测试网速"
                android:textSize="@dimen/dimen_40_dip"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_check_wifi"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_check_wifi"
                android:layout_centerHorizontal="true"
                android:layout_width="@dimen/dimen_80_dip"
                android:layout_height="@dimen/dimen_80_dip"
                android:background="@drawable/perm_scan_wifi"/>
            <TextView
                android:layout_marginTop="@dimen/dimen_20_dip"
                android:layout_below="@+id/iv_check_wifi"
                android:layout_width="wrap_content"
                android:text="蹭网检测"
                android:textSize="@dimen/dimen_40_dip"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_check_safe"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_check_safe"
                android:layout_centerHorizontal="true"
                android:layout_width="@dimen/dimen_80_dip"
                android:layout_height="@dimen/dimen_80_dip"
                android:background="@drawable/safe_check"/>
            <TextView
                android:layout_marginTop="@dimen/dimen_20_dip"
                android:layout_below="@+id/iv_check_safe"
                android:layout_width="wrap_content"
                android:text="安全检测"
                android:textSize="@dimen/dimen_40_dip"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_btns"
        android:layout_below="@+id/layout_btns2"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/dimen_300_dip">
        <RelativeLayout
            android:id="@+id/layout_connect"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_connent"
                android:layout_centerHorizontal="true"
                android:layout_width="@dimen/dimen_80_dip"
                android:layout_height="@dimen/dimen_80_dip"
                android:background="@drawable/connet"/>
            <TextView
                android:layout_marginTop="@dimen/dimen_20_dip"
                android:layout_below="@+id/iv_connent"
                android:layout_width="wrap_content"
                android:text="连接网络"
                android:textSize="@dimen/dimen_40_dip"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/layout_disconnect"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_disconnent"
                android:layout_centerHorizontal="true"
                android:layout_width="@dimen/dimen_80_dip"
                android:layout_height="@dimen/dimen_80_dip"
                android:background="@drawable/disconnect"/>
            <TextView
                android:layout_marginTop="@dimen/dimen_20_dip"
                android:layout_below="@+id/iv_disconnent"
                android:layout_width="wrap_content"
                android:text="断开连接"
                android:textSize="@dimen/dimen_40_dip"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_delete_wifi"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_delete_wifi"
                android:layout_centerHorizontal="true"
                android:layout_width="@dimen/dimen_80_dip"
                android:layout_height="@dimen/dimen_80_dip"
                android:background="@drawable/delete"/>
            <TextView
                android:layout_marginTop="@dimen/dimen_20_dip"
                android:layout_below="@+id/iv_delete_wifi"
                android:layout_width="wrap_content"
                android:text="忘记网络"
                android:textSize="@dimen/dimen_40_dip"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_see_wifi"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_see_wifi"
                android:layout_centerHorizontal="true"
                android:layout_width="@dimen/dimen_80_dip"
                android:layout_height="@dimen/dimen_80_dip"
                android:background="@drawable/see"/>
            <TextView
                android:layout_marginTop="@dimen/dimen_20_dip"
                android:layout_below="@+id/iv_see_wifi"
                android:layout_width="wrap_content"
                android:text="查看网络"
                android:textSize="@dimen/dimen_40_dip"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_line"
        android:layout_below="@+id/layout_btns"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dip"
        android:layout_marginLeft="@dimen/dimen_60_dip"
        android:layout_marginRight="@dimen/dimen_60_dip"
        android:background="@android:color/darker_gray" />

    <Button
        android:layout_below="@+id/iv_line"
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginTop="@dimen/dimen_40_dip"
        android:layout_marginBottom="@dimen/dimen_40_dip"
        android:text="取消"/>
</RelativeLayout>


</RelativeLayout>