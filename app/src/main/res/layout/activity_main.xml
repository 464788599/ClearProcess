<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:circularProgrssBar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/accent_material_light"
    tools:context=".activity.MainActivity">

    <com.kingdom.test.clearprocess.view.CircularProgrssBar
        android:id="@+id/cpb_progressbar"
        android:layout_width="@dimen/dimen_599_dip"
        circularProgrssBar:CircularProgrssBarName="RAM"
        circularProgrssBar:CircularProgrssBarNameSize="@dimen/dimen_60_dip"
        circularProgrssBar:memorySize="@dimen/dimen_45_dip"
        circularProgrssBar:percentageSize="@dimen/dimen_150_dip"
        circularProgrssBar:progressBarsize="@dimen/dimen_20_dip"
        circularProgrssBar:progressBarColor="@android:color/white"
        android:layout_height="@dimen/dimen_599_dip"
        android:layout_marginLeft="@dimen/dimen_120_dip"
        android:layout_marginTop="@dimen/dimen_200_dip" />

    <com.kingdom.test.clearprocess.view.CircularProgrssBar
        android:id="@+id/cpb_progressbar_rom"
        android:layout_width="@dimen/dimen_450_dip"
        android:layout_height="@dimen/dimen_450_dip"
        android:layout_alignParentRight="true"
        circularProgrssBar:CircularProgrssBarName="储存空间"
        circularProgrssBar:CircularProgrssBarNameSize="@dimen/dimen_60_dip"
        circularProgrssBar:memorySize="@dimen/dimen_45_dip"
        circularProgrssBar:percentageSize="@dimen/dimen_130_dip"
        circularProgrssBar:progressBarsize="@dimen/dimen_20_dip"
        circularProgrssBar:progressBarColor="@android:color/white"
        android:layout_marginRight="@dimen/dimen_100_dip"
        android:layout_marginTop="@dimen/dimen_420_dip" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/layout_memory_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_220_dip"
            android:layout_marginTop="@dimen/dimen_110_dip"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dimen_150_dip"
                android:layout_height="@dimen/dimen_150_dip"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/memory_speed" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="内存加速" />
        </LinearLayout>
        <ImageView
            android:background="@android:color/darker_gray"
            android:layout_centerHorizontal="true"
            android:layout_width="0.1dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_marginRight="@dimen/dimen_220_dip"
            android:layout_alignParentRight="true"
            android:id="@+id/layout_clear_rubbish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_110_dip"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dimen_150_dip"
                android:layout_height="@dimen/dimen_150_dip"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/clearrubbish" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="垃圾清理" />
        </LinearLayout>
        <ImageView
            android:background="@android:color/darker_gray"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="0.1dp" />
        <LinearLayout
            android:layout_marginLeft="@dimen/dimen_220_dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/layout_battery_optimize"
            android:layout_marginBottom="@dimen/dimen_110_dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dimen_150_dip"
                android:layout_height="@dimen/dimen_150_dip"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/battery_charging"
                android:id="@+id/imageView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="电池优化" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="@dimen/dimen_220_dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:id="@+id/layout_wifi"
            android:layout_marginBottom="@dimen/dimen_110_dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dimen_150_dip"
                android:layout_height="@dimen/dimen_150_dip"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/wifi"
                android:id="@+id/iv_wifi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="wifi管理" />
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>
